<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:backgroundTintMode="add"
        android:background="#BEC2BE">
    <Button
            android:text="contacts"
            android:layout_width="415dp"
            android:layout_height="50dp" android:id="@+id/contact"
            android:backgroundTint="#606668"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meteo"/>
    <Button
            android:text="@string/tacheL"
            android:layout_width="415dp"
            android:layout_height="50dp" android:id="@+id/tache_longue"
            android:backgroundTint="#606668"
            tools:ignore="TextContrastCheck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/chrono"/>
    <Button
            android:text="Galerie"
            android:layout_width="415dp"
            android:layout_height="50dp" android:id="@+id/galerie"
            android:backgroundTint="#606668"
            tools:ignore="TextContrastCheck"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/photo"/>
    <Button
            android:text="@string/chronometre"
            android:layout_width="415dp"
            android:layout_height="50dp" android:id="@+id/chrono"
            android:backgroundTint="#606668"
            tools:ignore="TextContrastCheck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/galerie"/>
    <Button
            android:text="@string/bonjour"
            android:layout_width="415dp"
            android:layout_height="50dp" android:id="@+id/bonjour"
            android:backgroundTint="#FC3022"
            tools:ignore="TextContrastCheck"
            app:layout_constraintBottom_toTopOf="@+id/photo" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

    <Button
            android:text="@string/photo"
            android:layout_width="415dp"
            android:layout_height="50dp" android:id="@+id/photo"
            android:backgroundTint="#C91003"
            tools:ignore="TextContrastCheck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bonjour"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/group"/>
    <Button
            android:text="Météo"
            android:layout_width="415dp"
            android:layout_height="50dp" android:id="@+id/meteo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tache_longue" android:backgroundTint="#606668"/>

</androidx.constraintlayout.widget.ConstraintLayout>