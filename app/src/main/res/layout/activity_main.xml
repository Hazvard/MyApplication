<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:backgroundTintMode="add"
        android:background="#BEC2BE">
    <Button
            android:text="@string/chronometre"
            android:layout_width="415dp"
            android:layout_height="78dp" android:id="@+id/chrono"
            android:backgroundTint="#606668"
            tools:ignore="TextContrastCheck"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/photo" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/bonjour"
            android:layout_width="415dp"
            android:layout_height="78dp" android:id="@+id/bonjour"
            android:backgroundTint="#FC3022"
            tools:ignore="TextContrastCheck"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/photo" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="@string/photo"
            android:layout_width="415dp"
            android:layout_height="78dp" android:id="@+id/photo"
            android:backgroundTint="#C91003"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="192dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="141dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="TextContrastCheck"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/group"/>

</androidx.constraintlayout.widget.ConstraintLayout>